<h2 class="font-bold text-gray-800 text-lg dark:text-gray-400">
  <%= Time.zone.now.strftime("%A, %b %d, %Y") %>
</h2>

<div>
  <div class="flex flex-col mt-4 mb-2">
    <div class="flex flex-row">
      <div class="flex-1 my-auto">
        <div class="text-gray-600 text-sm dark:text-gray-400">
          <%= weather_data.name %>
        </div>
        <div class="text-3xl font-bold text-gray-800 dark:text-gray-300">
          <%= weather_data.main.temp %> Â°C
        </div>
        <div class="text-xs text-gray-600 dark:text-gray-400">
          <%= weather_data.weather.first.main %>
        </div>
      </div>
      <div class="w-24 h-24">
        <img src="https://openweathermap.org/img/wn/<%= weather_data.weather.first.icon %>@2x.png" alt="<%= weather_data.weather.first.description %>">
      </div>
    </div>
    <div class="text-gray-600 text-sm dark:text-gray-400">
      Humidity
    </div>
    <div class="text-3xl font-bold text-gray-800 dark:text-gray-300 mb-4">
      <%= weather_data.main.humidity %>%
    </div>
    <div class="text-gray-600 text-sm dark:text-gray-400">
      Wind Speed
    </div>
    <div class="inline">
      <span class="text-3xl font-bold text-gray-800 dark:text-gray-300">
        <%= number_with_precision(weather_data.wind.speed * 3.6, precision: 2) %>
      </span>
      <span class="text-gray-600 text-sm dark:text-gray-400">km/hr</span>
    </div>
  </div>
</div>